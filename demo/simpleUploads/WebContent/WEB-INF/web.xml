<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>NutPan</display-name>
  <description>用Nutz做的简单网盘</description>
  <servlet>
  	<servlet-name>nutz</servlet-name>
  	<servlet-class>org.nutz.mvc.NutServlet</servlet-class>
  	<init-param>
  		<param-name>modules</param-name>
  		<param-value>org.nutz.website.pan.MainModule</param-value>
  	</init-param>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>nutz</servlet-name>
  	<url-pattern>*.nut</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>